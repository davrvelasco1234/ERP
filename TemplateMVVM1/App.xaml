<Application 
    x:Class="TemplateMVVM1.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:Locator="clr-namespace:TemplateMVVM1.WindowLocator"    
    xmlns:ViewD="clr-namespace:TemplateMVVM1.View.Dialog"
    xmlns:ViewModelD="clr-namespace:TemplateMVVM1.ViewModel.Dialog">
    
    
    <Application.Resources>
        <ResourceDictionary>


            <!--Todas las viewmodel deberan ser instanciadas en la "ViewModelLocator.cs"-->
            <Locator:ViewModelLocator x:Key="ViewModelLocator"/>

            <!--Para cada ventana de dialogo debera existir una DataTemplate de esta manera se ligara la viewModel del dialogo con la view-->
            <!--las viewModel del dialogo NO se instancian en la "ViewModelLocator.cs"-->

            <DataTemplate DataType="{x:Type ViewModelD:DialogViewModel}">
                <ViewD:DialogControl/>
            </DataTemplate>


            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Estilos/EstilosGenerales.xaml"/>
                <ResourceDictionary Source="Estilos/EstilosEspecificos.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
    
    
