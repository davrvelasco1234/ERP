<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ERP_Controls.CtrolText;assembly=ERP_Controls"
    xmlns:Support="clr-namespace:DataGridFilterLibrary.Support;assembly=DataGridFilterLibrary"
    xmlns:Filter="clr-namespace:DataGridFilterLibrary;assembly=DataGridFilterLibrary">
    
    
    <Style BasedOn="{StaticResource {x:Type TextBoxBase}}" TargetType="controls:TextBoxType"/>
    <Style BasedOn="{StaticResource {x:Type TextBoxBase}}" TargetType="Support:DelayTextBox"/>

    <Style BasedOn="{StaticResource {x:Type TextBoxBase}}" TargetType="Filter:DataGridHeaderFilterControl"/>
    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="DataGridColumnHeader"/>

    


